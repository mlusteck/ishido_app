<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Games</h1>
  <div class="row">
    <% @games.each do |game| %>
      <div class="col-12 col-md-6">
        <h3>Game # <%= game.id %>:
              <%= link_to "Play", game %>
        </h3>
        <p><%= link_to 'Destroy', game, class: "edit-link",
                         method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </div><!-- end col -->
    <% end %>
  </div><!-- end row -->
  <p><%= link_to 'New Game', new_game_path, class: "edit-link" %></p>
</div>
