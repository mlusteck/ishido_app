<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Games</h1>
  <% if user_signed_in? %>
  <div class="row">
    <% @games.each do |game| %>
      <div class="col-12 col-md-6">
        <h3>Game # <%= game.id %>:
              <%= link_to "Play", game_path(game, name:game.name) %>
        </h3>
        <p><%= link_to 'Destroy', game, class: "edit-link",
                         method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </div><!-- end col -->
    <% end %>
  </div><!-- end row -->
  <% end %>
  <p><%= link_to 'New Game', games_path, class: "edit-link",
                   method: :create %>
  </p>
</div>
